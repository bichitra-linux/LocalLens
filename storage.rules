# Firebase Storage Rules for LocalLens
# Copy these rules to your Firebase Console

rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Note images - allow authenticated users to upload
    match /notes/{allPaths=**} {
      allow read: if true; // Public read for note images
      allow write: if request.auth != null
        && request.resource.size < 5 * 1024 * 1024  // Max 5MB
        && request.resource.contentType.matches('image/.*'); // Only images
    }
    
    // User avatars - only owner can upload
    match /avatars/{userId}/{allPaths=**} {
      allow read: if true; // Public read for avatars
      allow write: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.size < 2 * 1024 * 1024  // Max 2MB
        && request.resource.contentType.matches('image/.*'); // Only images
    }
  }
}